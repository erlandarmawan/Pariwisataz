<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uusbotak.pariwisata.gunung_papandayan">
    <ImageView
        android:id="@+id/gunung_papandayan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/gunungpapandayan"
        android:layout_marginBottom="0dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Wisata Gunung Papandayan yang terletak di Kabupaten Garut, Jawa Barat tepatnya di Kecamatan Cisurupan. Gunung dengan ketinggian 2665 meter di atas permukaan laut itu terletak sekitar 70 km sebelah tenggara Kota Bandung."
        android:layout_marginBottom="100dp"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="200dp"
        tools:layout_editor_absoluteX="0dp" />
</RelativeLayout>
